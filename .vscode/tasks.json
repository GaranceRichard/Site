{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Global",
      "type": "shell",
      "command": "powershell -NoExit -Command \"Write-Host 'Ready'\"",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "panel": "new",
        "reveal": "always",
        "focus": true,
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Backend",
      "type": "shell",
      "command": "if (Test-Path .\\.venv\\Scripts\\Activate.ps1) { .\\.venv\\Scripts\\Activate.ps1 }; python manage.py runserver",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "panel": "new",
        "reveal": "silent",
        "focus": false,
        "showReuseMessage": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Frontend",
      "type": "process",
      "command": "${env:ProgramFiles}\\nodejs\\npm.cmd",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend",
        "env": {
          "Path": "${env:Path};${env:ProgramFiles}\\nodejs"
        }
      },
      "presentation": {
        "panel": "new",
        "reveal": "silent",
        "focus": false,
        "showReuseMessage": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Monitor",
      "type": "shell",
      "command": "powershell -ExecutionPolicy Bypass -File .\\scripts\\monitor-local.ps1 -Loop -IntervalSeconds 30",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "panel": "new",
        "reveal": "silent",
        "focus": false,
        "showReuseMessage": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Perf Loop",
      "type": "shell",
      "command": "while ($true) { try { Invoke-WebRequest -Uri 'http://127.0.0.1:3000' -Method GET -TimeoutSec 5 | Out-Null; npm run perf:dev; Start-Sleep -Seconds 600 } catch { Write-Host 'Perf Loop: frontend indisponible, nouvel essai dans 30s.'; Start-Sleep -Seconds 30 } }",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "panel": "new",
        "reveal": "silent",
        "focus": false,
        "showReuseMessage": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Test Back",
      "type": "shell",
      "command": "powershell -NoExit -Command \"if (Test-Path .\\.venv\\Scripts\\Activate.ps1) { .\\.venv\\Scripts\\Activate.ps1 }; Write-Host 'Ready'\"",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "panel": "new",
        "reveal": "silent",
        "focus": false,
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Test Front",
      "type": "shell",
      "command": "powershell -NoExit -Command \"Write-Host 'Ready'\"",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "panel": "new",
        "reveal": "silent",
        "focus": false,
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "dev:all",
      "dependsOn": ["Global", "Backend", "Frontend", "Monitor", "Perf Loop", "Test Back", "Test Front"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ]
}


