# -------------------------------------------------
# Django environment
# -------------------------------------------------
DJANGO_ENV=development
DJANGO_DEBUG=true
DJANGO_LOG_LEVEL=DEBUG
DJANGO_STARTUP_BANNER=true

# -------------------------------------------------
# Security
# -------------------------------------------------
# Set a strong secret key (never commit it).
DJANGO_SECRET_KEY=change-me-dev-secret-key
# Dev-only escape hatch to allow the insecure fallback secret.
DJANGO_ALLOW_INSECURE_SECRET_KEY=false

# -------------------------------------------------
# Hosts / CORS / CSRF
# -------------------------------------------------
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend dev origin (Next.js)
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3000
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3000
# Dev-only escape hatch to allow non-local origins.
DJANGO_ALLOW_DEV_NONLOCAL_ORIGINS=false

# -------------------------------------------------
# Database
# -------------------------------------------------
# Dev uses SQLite by default (no DATABASE_URL needed).
# Production example:
# DATABASE_URL=postgresql://user:password@host:5432/dbname
DATABASE_URL=

# Force SSL to the DB in production (recommended)
DJANGO_DB_SSL_REQUIRE=true
DJANGO_DB_CONN_MAX_AGE=600

# -------------------------------------------------
# Cache / Redis
# -------------------------------------------------
# Production example:
# REDIS_URL=redis://:password@host:6379/0
REDIS_URL=
# Dev-only escape hatch: allow LocMemCache in production (not recommended).
DJANGO_ALLOW_LOC_MEM_CACHE_IN_PROD=false

# -------------------------------------------------
# DRF throttling
# -------------------------------------------------
DJANGO_GLOBAL_ANON_THROTTLE_RATE=120/min
DJANGO_GLOBAL_USER_THROTTLE_RATE=600/min
DJANGO_ANON_THROTTLE_RATE=600/hour
DJANGO_USER_THROTTLE_RATE=2400/hour
DJANGO_CONTACT_THROTTLE_RATE=10/min
DJANGO_HEALTH_THROTTLE_RATE=60/min

# -------------------------------------------------
# Optional JWT (backoffice login uses this)
# -------------------------------------------------
# Set true to enable /api/auth/token/ and bearer auth for admin-only endpoints.
# Requires djangorestframework-simplejwt and an is_staff/is_superuser account.
DJANGO_ENABLE_JWT=false

# -------------------------------------------------
# Optional monitoring
# -------------------------------------------------
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# -------------------------------------------------
# i18n / time
# -------------------------------------------------
DJANGO_LANGUAGE_CODE=fr
DJANGO_TIME_ZONE=UTC
