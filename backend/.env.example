# -------------------------------------------------
# Django environment
# -------------------------------------------------
DJANGO_ENV=development
DJANGO_DEBUG=true
DJANGO_LOG_LEVEL=DEBUG
DJANGO_STARTUP_BANNER=true

# -------------------------------------------------
# Security
# -------------------------------------------------
# Dev only. In production, set a strong secret key (never commit it).
DJANGO_SECRET_KEY=change-me-dev-secret-key

# -------------------------------------------------
# Hosts / CORS / CSRF
# -------------------------------------------------
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend dev origin (Next.js)
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3000
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3000

# -------------------------------------------------
# Database
# -------------------------------------------------
# Dev uses SQLite by default (no DATABASE_URL needed).
# Production example:
# DATABASE_URL=postgresql://user:password@host:5432/dbname
DATABASE_URL=

# Force SSL to the DB in production (recommended)
DJANGO_DB_SSL_REQUIRE=true
DJANGO_DB_CONN_MAX_AGE=600

# -------------------------------------------------
# Cache / Redis (optional)
# -------------------------------------------------
# Production example:
# REDIS_URL=redis://:password@host:6379/0
REDIS_URL=

# -------------------------------------------------
# DRF throttling
# -------------------------------------------------
DJANGO_ANON_THROTTLE_RATE=1000/hour
DJANGO_USER_THROTTLE_RATE=5000/hour
DJANGO_CONTACT_THROTTLE_RATE=10/min
DJANGO_HEALTH_THROTTLE_RATE=60/min

# -------------------------------------------------
# Optional JWT (enable only if you installed simplejwt and you really use it)
# -------------------------------------------------
DJANGO_ENABLE_JWT=false

# -------------------------------------------------
# Optional monitoring
# -------------------------------------------------
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# -------------------------------------------------
# i18n / time
# -------------------------------------------------
DJANGO_LANGUAGE_CODE=fr
DJANGO_TIME_ZONE=UTC
