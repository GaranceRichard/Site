# Environnement
DJANGO_ENV=development  # development | production

# Sécurité
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=True

# Réseau / domaine
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Front autorisé (CORS) — dev local
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3000

# CSRF trusted origins (utile dès que vous passez en HTTPS / domaine)
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3000

# Options prod (si besoin)
DJANGO_SECURE_SSL_REDIRECT=False
DJANGO_SECURE_HSTS_SECONDS=3600
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=False
DJANGO_SECURE_HSTS_PRELOAD=False
