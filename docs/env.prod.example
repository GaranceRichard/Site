DJANGO_SECRET_KEY=<change-me>
DJANGO_ALLOWED_HOSTS=example.com
DJANGO_CORS_ALLOWED_ORIGINS=https://example.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://example.com
DJANGO_ALLOW_INSECURE_ORIGINS_IN_PROD=false
DJANGO_SECURE_SSL_REDIRECT=true
DJANGO_DB_SSL_REQUIRE=true

POSTGRES_DB=monsite
POSTGRES_USER=monsite
POSTGRES_PASSWORD=<change-me>
DATABASE_URL=postgresql://monsite:<change-me>@db:5432/monsite

REDIS_PASSWORD=<change-me>
REDIS_URL=redis://:<change-me>@redis:6379/0

NEXT_PUBLIC_API_BASE_URL=https://example.com

# Images (overridden by CD)
BACKEND_IMAGE=ghcr.io/<owner>/<repo>-backend:latest
FRONTEND_IMAGE=ghcr.io/<owner>/<repo>-frontend:latest

# S3 / CDN (optionnel)
AWS_STORAGE_BUCKET_NAME=garancerichard-media
AWS_S3_REGION_NAME=us-east-1
AWS_ACCESS_KEY_ID=<change-me>
AWS_SECRET_ACCESS_KEY=<change-me>
AWS_S3_CUSTOM_DOMAIN=cdn.example.com
AWS_QUERYSTRING_AUTH=false

# Optional throttling overrides
DJANGO_GLOBAL_ANON_THROTTLE_RATE=120/min
DJANGO_GLOBAL_USER_THROTTLE_RATE=600/min

# Observabilite (Prometheus + Grafana)
PROMETHEUS_RETENTION_DAYS=15
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=<change-me>
